<h2>Categorias</h2>
<a href="/categorias/nova">Nova Categoria</a>
<table>
  <tr><th>ID</th><th>Nome</th><th>Ações</th></tr>
  <% categorias.forEach(categoria => { %>
    <tr>
      <td><%= categoria.id %></td>
      <td><%= categoria.nome %></td>
      <td>
        <a href="/categorias/<%= categoria.id %>/editar">Editar</a>
        <form action="/categorias/<%= categoria.id %>/deletar" method="post" style="display:inline;">
          <button type="submit">Deletar</button>
        </form>
      </td>
    </tr>
  <% }) %>
</table>
