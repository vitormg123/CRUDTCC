doctype html
html(lang="pt-br")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Novo Produto
    link(rel="stylesheet", href="/css/style.css")
    style.
      body {
        background: #1a1a1a;
        font-family: Arial, sans-serif;
        color: #fff;
        margin: 0;
        padding: 0;
      }

      .page-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 40px 20px;
        min-height: 100vh;
        box-sizing: border-box;
      }

      .form-container {
        background: #2a2a2a;
        padding: 30px;
        border-radius: 12px;
        border: 2px solid #cf5209;
        max-width: 600px;
        width: 100%;
        box-shadow: 0 0 12px #0007;
        display: flex;
        flex-direction: column;
      }

      h2 {
        text-align: center;
        margin-top: 0;
        margin-bottom: 20px;
        color: #cf5209;
      }

      label {
        display: block;
        margin-top: 15px;
        margin-bottom: 5px;
        font-weight: bold;
      }

      input[type="text"],
      input[type="number"],
      textarea,
      select {
        width: 100%;
        padding: 8px;
        border-radius: 6px;
        border: 1px solid #444;
        background: #2a2a2a;
        color: #fff;
      }

      textarea {
        resize: vertical;
        min-height: 80px;
      }

      .form-footer {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
      }

      .voltar-btn {
        background: #b7410e;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
      }

      .voltar-btn:hover {
        background: #d3541a;
      }

      .btn-primary {
        background: #cf5209;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
      }

      .btn-primary:hover {
        background: #e6661a;
      }

      .form-row {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 10px;
      }

      .form-group {
        flex: 0 0 48%;
        display: flex;
        flex-direction: column;
      }

  body
    .page-container
      .form-container
        h2 Novo Produto

        if alertMessage
          script.
            alert("#{alertMessage}");

        form(action="/produtos/novo", method="post", enctype="multipart/form-data")
          label Nome:
          input(type="text", name="nome", required, value=nome || '')

          label Descri√ß√£o:
          textarea(name="descricao", required)= descricao || ''

          label Pre√ßo:
          input(type="number", step="0.01", name="preco", required, value=preco || '')

          label Desconto (%):
          input(type="number", step="0.01", name="desconto", value=desconto || '')

          .form-row
            .form-group
              label Cores:
              select(name="cores[]" multiple required, size=6)
                option(value="Preto") Preto
                option(value="Marrom escuro") Marrom escuro
                option(value="Marrom claro") Marrom claro
                option(value="Caramelo") Caramelo
                option(value="Caf√©") Caf√©
                option(value="Areia") Areia
                option(value="Bord√¥") Bord√¥
                option(value="Cinza") Cinza
                option(value="Vermelho") Vermelho
                option(value="Azul marinho") Azul marinho
                option(value="Verde musgo") Verde musgo
                option(value="Verde oliva") Verde oliva
                option(value="Bege") Bege
                option(value="Mostarda") Mostarda
                option(value="Laranja queimado") Laranja queimado
                option(value="Vinho") Vinho
                option(value="Roxo escuro") Roxo escuro
                option(value="Cinza claro") Cinza claro
                option(value="Creme") Creme
                option(value="Chocolate") Chocolate
                option(value="Tan") Tan
                option(value="Terracota") Terracota

            .form-group
              label Tamanhos:
              select(name="tamanhos[]" multiple required, size=6)
                option(value="33") 33
                option(value="34") 34
                option(value="35") 35
                option(value="36") 36
                option(value="36.5") 36.5
                option(value="37") 37
                option(value="37.5") 37.5
                option(value="38") 38
                option(value="38.5") 38.5
                option(value="39") 39
                option(value="39.5") 39.5
                option(value="40") 40
                option(value="40.5") 40.5
                option(value="41") 41
                option(value="41.5") 41.5
                option(value="42") 42
                option(value="42.5") 42.5
                option(value="43") 43
                option(value="43.5") 43.5
                option(value="44") 44
                option(value="44.5") 44.5
                option(value="45") 45
                option(value="46") 46
                option(value="47") 47
                option(value="48") 48

          label Categoria:
          select(name="categoriaId", required)
            each categoria in categorias
              if categoriaId && categoriaId == categoria.id
                option(value=categoria.id, selected)= categoria.nome
              else
                option(value=categoria.id)= categoria.nome

          // üëá NOVO CAMPO: Quantidade de pares
          label Quantidade de pares dispon√≠veis:
          input(type="number", name="quantidadePares", min="1", required)

          label Imagens do Produto (at√© 10):
          input(type="file", name="imagens", accept="image/*", multiple)

          .form-footer
            button.voltar-btn(type="button", onclick="window.location.href='/'") Voltar
            button(type="submit", class="btn-primary") Cadastrar
