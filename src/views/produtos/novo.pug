doctype html
html(lang="pt-br")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Novo Produto
    link(rel="stylesheet", href="/css/style.css")
    style.
      body {
        background: #1a1a1a;
        font-family: Arial, sans-serif;
        color: #fff;
        margin: 0;
        padding: 0;
      }

      .page-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 40px 20px;
        min-height: 100vh;
        box-sizing: border-box;
      }

      .form-container {
        background: #2a2a2a;
        padding: 30px;
        border-radius: 12px;
        border: 2px solid #cf5209;
        max-width: 600px;
        width: 100%;
        box-shadow: 0 0 12px #0007;
        display: flex;
        flex-direction: column;
      }

      h2 {
        text-align: center;
        margin-top: 0;
        margin-bottom: 20px;
        color: #cf5209;
      }

      label {
        display: block;
        margin-top: 15px;
        margin-bottom: 5px;
        font-weight: bold;
      }

      input[type="text"],
      input[type="number"],
      textarea,
      select {
        width: 100%;
        padding: 8px;
        border-radius: 6px;
        border: 1px solid #444;
        background: #2a2a2a;
        color: #fff;
      }

      textarea {
        resize: vertical;
        min-height: 80px;
      }

      .form-footer {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
      }

      .voltar-btn {
        background: #b7410e;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
      }

      .voltar-btn:hover {
        background: #d3541a;
      }

      .btn-primary {
        background: #cf5209;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
      }

      .btn-primary:hover {
        background: #e6661a;
      }

  body
    .page-container
      .form-container
        h2 Novo Produto

        if alertMessage
          script.
            alert("#{alertMessage}");

        form(action="/produtos/novo", method="post", enctype="multipart/form-data")
          label Nome:
          input(type="text", name="nome", required, value=nome || '')

          label Descrição:
          textarea(name="descricao", required)= descricao || ''

          label Preço:
          input(type="number", step="0.01", name="preco", required, value=preco || '')

          label Desconto (%):
          input(type="number", step="0.01", name="desconto", value=desconto || '')

          label(for="tamanho") Tamanho:
          input(type="text", id="tamanho", name="tamanho", placeholder="Ex: 37, 38, 39...", required, value=tamanho || '')

          label Categoria:
          select(name="categoriaId", required)
            each categoria in categorias
              if categoriaId && categoriaId == categoria.id
                option(value=categoria.id, selected)= categoria.nome
              else
                option(value=categoria.id)= categoria.nome

          label Imagens do Produto (até 10):
          input(type="file", name="imagens", accept="image/*", multiple)

          .form-footer
            button.voltar-btn(type="button", onclick="window.location.href='/'") Voltar
            button(type="submit", class="btn-primary") Cadastrar
