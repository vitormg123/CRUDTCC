<h2>Novo Produto</h2>
<form action="/produtos/novo" method="post">
  <label>Nome: <input type="text" name="nome" required></label><br>
  <label>Descrição: <textarea name="descricao" required></textarea></label><br>
  <label>Preço: <input type="number" step="0.01" name="preco" required></label><br>
  <label>Desconto (%): <input type="number" step="0.01" name="desconto"></label><br>
  <label>Categoria:
    <select name="categoriaId" required>
      <% categorias.forEach(categoria => { %>
        <option value="<%= categoria.id %>"><%= categoria.nome %></option>
      <% }) %>
    </select>
  </label><br>
  <button type="submit">Cadastrar</button>
</form>
