<h2>Editar Produto</h2>
<form action="/produtos/<%= produto.id %>/editar" method="post">
  <label>Nome: <input type="text" name="nome" value="<%= produto.nome %>" required></label><br>
  <label>Descrição: <textarea name="descricao" required><%= produto.descricao %></textarea></label><br>
  <label>Preço: <input type="number" step="0.01" name="preco" value="<%= produto.preco %>" required></label><br>
  <label>Desconto (%): <input type="number" step="0.01" name="desconto" value="<%= produto.desconto %>"></label><br>
  <label>Categoria:
    <select name="categoriaId" required>
      <% categorias.forEach(categoria => { %>
        <option value="<%= categoria.id %>" <%= produto.categoriaId === categoria.id ? 'selected' : '' %>><%= categoria.nome %></option>
      <% }) %>
    </select>
  </label><br>
  <button type="submit">Salvar</button>
</form>
