<h2>Produtos</h2>
<% if (usuario && usuario.tipo === 'admin') { %>
  <a href="/produtos/novo">Novo Produto</a>
<% } %>
<table>
  <tr><th>ID</th><th>Nome</th><th>Categoria</th><th>Preço</th><th>Desconto</th><th>Ações</th></tr>
  <% produtos.forEach(produto => { %>
    <tr>
      <td><%= produto.id %></td>
      <td><%= produto.nome %></td>
      <td><%= produto.Categoria ? produto.Categoria.nome : '' %></td>
      <td>R$ <%= produto.preco.toFixed(2) %></td>
      <td><%= produto.desconto %> %</td>
      <td>
        <% if (usuario && usuario.tipo === 'admin') { %>
          <a href="/produtos/<%= produto.id %>/editar">Editar</a>
          <form action="/produtos/<%= produto.id %>/deletar" method="post" style="display:inline;">
            <button type="submit">Deletar</button>
          </form>
        <% } else if (usuario && usuario.tipo === 'usuario') { %>
          <form action="/carrinho/adicionar/<%= produto.id %>" method="post" style="display:inline;">
            <button type="submit">Adicionar ao Carrinho</button>
          </form>
        <% } %>
      </td>
    </tr>
  <% }) %>
</table>
