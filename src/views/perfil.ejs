<% /* Página de Perfil do Usuário */ %>
<div class="perfil-container">
  <div class="perfil-header">
    <% if (usuario.fotoPerfil) { %>
      <img src="<%= usuario.fotoPerfil %>" alt="Foto de Perfil" class="perfil-foto">
    <% } else { %>
      <img src="/img/user.png" alt="Foto de Perfil" class="perfil-foto">
    <% } %>
    <h2><%= usuario.nome %></h2>
    <a href="/logout"><button class="admin-btn" style="margin-left:20px;">Sair</button></a>
  </div>
  <% if (usuario.tipo === 'admin') { %>
    <div style="margin: 20px 0;">
      <a href="/produtos/novo"><button class="admin-btn">Cadastrar Produto</button></a>
      <a href="/categorias/nova"><button class="admin-btn">Cadastrar Categoria</button></a>
    </div>
    <h3>Categorias Cadastradas</h3>
    <ul class="lista-categorias">
      <% if (typeof categorias !== 'undefined' && categorias.length > 0) { %>
        <% categorias.forEach(cat => { %>
          <li><%= cat.nome %></li>
        <% }) %>
      <% } else { %>
        <li>Nenhuma categoria cadastrada.</li>
      <% } %>
    </ul>
    <hr>
  <% } %>
  <h3>Meu Carrinho</h3>
  <table>
    <tr><th>Produto</th><th>Preço</th><th>Desconto</th><th>Quantidade</th><th>Subtotal</th><th>Ações</th></tr>
    <% if (typeof itens !== 'undefined' && itens.length > 0) { %>
      <% itens.forEach(item => { %>
        <tr>
          <td><%= item.produto.nome %></td>
          <td>R$ <%= item.produto.preco.toFixed(2) %></td>
          <td><%= item.produto.desconto %> %</td>
          <td><%= item.quantidade %></td>
          <td>R$ <%= (item.produto.preco * item.quantidade * (1 - item.produto.desconto/100)).toFixed(2) %></td>
          <td>
            <form action="/carrinho/remover/<%= item.produto.id %>" method="post" style="display:inline;">
              <button type="submit">Remover</button>
            </form>
          </td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr><td colspan="6">Seu carrinho está vazio.</td></tr>
    <% } %>
  </table>
  <% if (typeof itens !== 'undefined' && itens.length > 0) { %>
    <p><strong>Total: R$ <%= total.toFixed(2) %></strong></p>
    <form action="/carrinho/finalizar" method="post">
      <button type="submit">Finalizar Compra</button>
    </form>
  <% } %>
</div>
<style>
.perfil-container {
  background: #222;
  border-radius: 8px;
  padding: 30px;
  max-width: 600px;
  margin: 40px auto;
  color: #fff;
}
.perfil-header {
  display: flex;
  align-items: center;
  gap: 20px;
}
.perfil-foto {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: #444;
  border: 2px solid #b7410e;
  object-fit: cover;
}
.admin-btn {
  background: #b7410e;
  color: #fff;
  border: none;
  padding: 8px 16px;
  border-radius: 4px;
  cursor: pointer;
  margin-right: 10px;
  transition: background 0.2s;
}
.admin-btn:hover {
  background: #d3541a;
}
.lista-categorias {
  list-style: none;
  padding: 0;
  margin: 0 0 20px 0;
}
.lista-categorias li {
  background: #333;
  color: #fff;
  margin-bottom: 6px;
  padding: 8px 12px;
  border-radius: 4px;
}
</style>
