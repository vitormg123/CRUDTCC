<div class="form-bg">
  <div class="form-box">
    <h2>Login</h2>
    <% if (typeof erro !== 'undefined') { %>
      <p style="color:red"><%= erro %></p>
    <% } %>
    <form action="/login" method="post">
      <label>Email:<br> <input type="email" name="email" required></label><br>
      <label>Senha:<br> <input type="password" name="senha" required></label><br>
      <button type="submit">Entrar</button>
    </form>
  </div>
</div>
<style>
html, body {
  height: 100%;
  margin: 0;
  padding: 0;
  background: #1a1a1a;
}
.form-bg {
  min-height: 100vh;
  min-height: 100dvh;
  width: 100vw;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #1a1a1a;
}
.form-box {
  background: #222;
  border: 2.5px solid #b7410e;
  border-radius: 10px;
  padding: 40px 32px 32px 32px;
  box-shadow: 0 2px 16px #0005;
  min-width: 320px;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.form-box h2 {
  margin-bottom: 24px;
  color: #fff;
}
.form-box label {
  display: block;
  margin-bottom: 16px;
  font-size: 1.05em;
}
.form-box input {
  width: 100%;
  padding: 8px;
  margin-top: 4px;
  border-radius: 4px;
  border: 1px solid #444;
  background: #333;
  color: #fff;
  font-size: 1em;
  box-sizing: border-box;
}
.form-box button {
  width: 100%;
  margin-top: 10px;
  font-size: 1.1em;
}
</style>
