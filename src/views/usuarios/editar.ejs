<h2>Editar Usuário</h2>
<form action="/usuarios/<%= usuario.id %>/editar" method="post">
  <label>Nome: <input type="text" name="nome" value="<%= usuario.nome %>" required></label><br>
  <label>Email: <input type="email" name="email" value="<%= usuario.email %>" required></label><br>
  <label>Tipo:
    <select name="tipo">
      <option value="usuario" <%= usuario.tipo === 'usuario' ? 'selected' : '' %>>Usuário</option>
      <option value="admin" <%= usuario.tipo === 'admin' ? 'selected' : '' %>>Administrador</option>
    </select>
  </label><br>
  <button type="submit">Salvar</button>
</form>
